<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_weight="1.7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="Date:"/>

                        <TextView
                            android:id="@+id/txt_date"
                            android:gravity="center|left"
                            android:layout_weight="0.3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/ed_storename"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter Store code" />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Store Performance"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/rectangle_box"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/txt_growthdegrowth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Growth/degrowth:" />

                            </android.support.design.widget.TextInputLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/ed_rocetqarget"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="RoceTargets:" />

                            </android.support.design.widget.TextInputLayout>


                        </LinearLayout>


                 </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="UpComing New Competition"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:background="@drawable/rectangle_box"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/ed_upcomingnewcompition"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Upcoming New Compition" />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Marketing Support"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:background="@drawable/rectangle_box"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/ed_anybtlsupport"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Any BTL Support Required" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/ed_billbuster"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Any Bill Buster Required:" />

                            </android.support.design.widget.TextInputLayout>


                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Man Power"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:background="@drawable/rectangle_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/ed_sm_asmvacancy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="SM/ASM Vacancy" />

                            </android.support.design.widget.TextInputLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Infra Issues"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/rectangle_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/ed_additionalcash"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Additional Cash TIlls" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/ed_parking"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Parking" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/ed_fireexit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Fire Exit" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/ed_lift"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Lift" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/ed_ac"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Ac" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/ed_pendingprojectjob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Pending Projects Job" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/ed_anyfixturerequired"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Any Fixture Requirement" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <Button
                        android:layout_marginTop="20dp"
                        android:id="@+id/btn_share"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/blue"
                        android:textColor="@color/white"
                        android:text="Submit"/>

                </LinearLayout>




            </android.support.v7.widget.CardView>



        </LinearLayout>

    </ScrollView>

</LinearLayout>
</layout>